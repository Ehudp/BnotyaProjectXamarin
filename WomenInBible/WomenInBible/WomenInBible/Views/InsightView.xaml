<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WomenInBible.Views.InsightView">
  <Grid VerticalOptions="Fill"
        HorizontalOptions="Fill"
        Padding="0, 20, 0, 20"
        BackgroundColor="Transparent">
    <Image Source="{Binding CurrentInsight.InsightImage}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
    <Button Text="{Binding MakeFavoriteButtonTitle}" Command="{Binding MakeFavoriteCommand}" HorizontalOptions="Start" />
  </Grid>
</ContentPage>